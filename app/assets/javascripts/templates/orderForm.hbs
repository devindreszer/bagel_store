{{#with menu_item}}
<div id="overlay"></div>
  <div class="reveal-modal open" data-reveal="" style="visibility: visible; display: block; opacity: 1;">
    <div class="row">
      <div class="small-6 columns">
        <p class="text-left">
          <a href="/menu_items?is_bulk={{is_bulk}}">Back to Menu</a>
        </p>
      </div>
      <div class="small-6 columns">
        <p class="text-right">
        </p>
      </div>
    </div>

    <div class="body-content row">
      <div class="small-12 small-centered columns">
        <div class="form-name">
          <h3 class="text-center">{{name}}</h3>
        </div>
        <hr>
      </div>
    </div>

    <div class="row">
      <div class="small-8 columns">
        <div class="form-image">
          <img alt={{name}} src={{image_url}}>
        </div>
      </div>
      <div class="small-4 columns">
        <div class="form-description"><p>{{description}}</p></div>
        <div class="form-price"><p>{{price}}</p></div>
      </div>
    </div>

    {{/with}}

    <div class="row">
      <div class="small-12 small-centered columns">
        <hr>
        <h3>Customize</h3>
        <div class="row">
          <div class="large-4 medium-6 small-12 columns">
          <label>Choose a Bagel
              <select>
                {{#each selections}}
                  {{#with option.ingredient}}
                    {{#if is_bagel}}
                      <option value="{{name}}">{{name}} {{#if price}} Add {{price}}{{/if}}</option>
                    {{/if}}
                  {{/with}}
                {{/each}}
              </select>
            </label>

            <label>Choose a Cream Cheese
              <select>
                {{#each selections}}
                  {{#with option.ingredient}}
                    {{#if is_cc}}
                      <option value="{{name}}">{{name}} {{#if price}} Add {{price}}{{/if}}</option>
                    {{/if}}
                  {{/with}}
                {{/each}}
              </select>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="large-4 medium-6 small-12 columns">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

