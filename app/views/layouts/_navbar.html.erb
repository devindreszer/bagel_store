<div class="contain-to-grid">
  <nav class="top-bar text-center" data-topbar>
    <section class="top-bar-section">
      <div class="logo-wrapper hide-for-small-only">
        <div class="logo">
        <%= link_to root_path, title: "personal-menu" do %>
            <%= image_tag("bobs_logo.png", alt: "Lovely logo") %>
          <% end %>
        </div>
      </div>

      <ul class="left">
        <li>
          <%= link_to menu_items_path(is_bulk: false), title: "personal-menu" do %>
            Personal Menu
          <% end %>
        </li>
        <li>
          <%= link_to menu_items_path(is_bulk: true), title: "bulk-order" do %>
            Bulk Order
          <% end %>
        </li>
      </ul>


      <ul class="right">
        <li>
          <%= link_to order_path(session[:order_id]), title: "current-order" do %>
            <i class="fi-shopping-bag"></i>  Current Order
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="has-dropdown">
            <%= link_to "#" do %>
              <i class="fi-torso"></i> <%= current_user.username %>
            <% end %>
            <ul class="dropdown">
              <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Order History', orders_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path, class: "small button radius" %></li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
