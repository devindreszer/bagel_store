<% @order_items.each do |order_item| %>
  <h2><%= order_item.menu_item.name %></h2>
  <p><%= order_item.price %></p>
  <ul>
    <% order_item.selections.each do |selection| %>
      <% if selection.is_selected %>
        <li><%= selection.option.ingredient.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
