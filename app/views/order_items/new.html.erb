<h2 class='item-name'><%= @menu_item.name %></h2>
<p class='item-price'><%= @menu_item.price %></p>
<p class='item-description'><%= @menu_item.description %></p>
<hr>

<%= form_for @order_item do |f| %>
  <%= f.hidden_field :menu_item_id %>
  Options:
  <table>
    <tbody>
      <%= f.fields_for :selections do |selections_form| %>
        <tr>
          <% option = selections_form.object.option %>
          <% ingredient = option.ingredient %>
          <%= selections_form.hidden_field :option_id %>
          <td><%= selections_form.label ingredient.name %></td>

          <% if option.is_addon %>
            <td>Add <%= ingredient.price %>
          <% else %>
            <td></td>
          <% end %>

          <td><%= selections_form.check_box :is_selected %></td>
        </tr>
      <% end %>
    <tbody>
  </table>

  <%= f.label :quantity %>
  <%= f.select :quantity, [1, 2, 3, 4, 5] %>

  <%= f.submit "Add to Order" %>
<% end %>
